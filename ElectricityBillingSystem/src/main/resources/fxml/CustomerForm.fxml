<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ebill.controllers.CustomerFormController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="header-title" text="Customer Bill Details">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="nameLabel" text="Customer Name*" />
                  <TextField fx:id="customerNameField" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="meterLabel" text="Meter Number" />
                  <TextField fx:id="meterNumberField" disable="true" editable="false" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="addressLabel" text="Address" />
                  <TextField fx:id="addressField" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="cityLabel" text="City" />
                  <TextField fx:id="cityField" />
               </children>
            </VBox>
             <VBox spacing="5.0" GridPane.rowIndex="2">
               <children>
                  <Label fx:id="stateLabel" text="State" />
                  <TextField fx:id="stateField" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Label fx:id="phoneLabel" text="Phone*" />
                  <TextField fx:id="phoneField" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.rowIndex="3">
               <children>
                  <Label fx:id="emailLabel" text="Email*" />
                  <TextField fx:id="emailField" />
               </children>
            </VBox>
             <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Label fx:id="unitsLabel" text="Units Consumed*" />
                  <TextField fx:id="unitsConsumedField" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.rowIndex="4">
               <children>
                  <Label fx:id="monthLabel" text="Billing Month*" />
                  <ComboBox fx:id="billingMonthComboBox" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
             <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <children>
                  <Label fx:id="statusLabel" text="Payment Status*" />
                  <ComboBox fx:id="paymentStatusComboBox" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
            <VBox spacing="5.0" GridPane.rowIndex="5">
               <children>
                  <Label fx:id="amountLabel" text="Bill Amount" />
                  <TextField fx:id="billAmountField" disable="true" editable="false" />
               </children>
            </VBox>
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#handleSave" styleClass="primary-button" text="Save" />
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
         </children>
      </HBox>
   </children>
</VBox>